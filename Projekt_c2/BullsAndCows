print("Ahoj.")
print("-"*100)
print("Vygeneroval jsem pro tebe nahodno číslo.")
print("Pojdmě si zahrát hru na býky a krávy")
print("-"*100)


    
zadane_cislo_hracem = input("Zadej číslo:")
zadane_cislo_pocitacem = "1234"
delka_zadaneho_cisla = len(zadane_cislo_hracem)
#print("delka zadaneho cisla",delka_zadaneho_cisla)
print("-"*100)
print("Zadane cislo hracem",zadane_cislo_hracem)
print("Zadane cislo pocitacem",zadane_cislo_pocitacem)
#print(zadane_cislo_hracem[0])

if 3 > delka_zadaneho_cisla < 5:
    print("zadane cislo je mensi nez 3 nebo vetsi nez 3")
elif not zadane_cislo_hracem.isdigit():
    print("zadaný údaj není čislo")
elif zadane_cislo_hracem[0] == "0":
    print("zadané čislo začiná nulou")
duplicita_znaku = 0

for znak in zadane_cislo_hracem:
#    print("Znak",znak)
    if zadane_cislo_hracem.count(znak)>1:
        duplicita_znaku += 1
if duplicita_znaku >=2:
    print("Zadané číslo obsahuje duplicitu čisel")

bulls = 0
cows = 0
for a in zadane_cislo_hracem:
    for b in zadane_cislo_pocitacem:
        if a == b:
            if zadane_cislo_pocitacem.index(b) == zadane_cislo_hracem.index(a):
                bulls += 1
            else:
                cows += 1
        

print("bulls",bulls)
print("cows",cows)    


     
    

    

        


